body
    background url(../img/noisy.png) repeat
    color white
    margin 0
    padding 0
    font-family 'Inter', sans-serif
    width 100%

    &:before
        content ""
        display block
        width 5px
        height 100%
        background url(../img/border.png) no-repeat
        position absolute

.content
    width 100%
    height 100vh
    display flex
    flex-direction row

    +below(1100px)
        flex-direction column

    &__left,
    &__right
        width 100%
        display flex
        justify-content center
        align-items center

    &__left
        flex-direction column
        padding 2%

    &__right
        align-items flex-start

.item__name
    display flex
    flex-direction column
    text-align center
    width 100%

.navigation
    width 100%
    max-width 100%
    display flex
    flex-direction row
    justify-content flex-end
    align-items center

@keyframes makeMeAppear
    0%
        opacity 0
        transform translateY(75px)
    
    100%
        opacity 1
        transform translateY(0)

.swiper-slide-active
    opacity 0
    animation makeMeAppear .6s ease .4s forwards

.mobile-hide,
.barcode
    +below(1100px)
        display none