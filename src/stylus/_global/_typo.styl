@font-face
    font-family 'coconatbold_ext'
    src url('../fonts/coconat-boldext-webfont.woff') format('woff')
    font-weight normal
    font-style normal

@font-face
    font-family 'coconatregular'
    src url('../fonts/coconat-regular-webfont.woff') format('woff')
    font-weight normal
    font-style normal

h1
    font-size 1.3em
    font-family 'coconatbold_ext'
    width 100%
    margin 0

    +below(1100px)
        font-size 2em

h2
    font-size .8em
    font-family 'Inter', sans-serif
    width 100%
    margin 0
    letter-spacing 2px
    font-weight normal
    color #666

h3
    font-size 2.6em
    margin-bottom 15px

h4
    font-size 1.5em

h3, h4
    font-family 'coconatbold_ext'
    margin 0
    text-align right

    +below(1100px)
        text-align left
        font-size 1.4em

p
    margin 0